<h1> Director #<%= @director.id %> details </h1>


<a href="/directors" class="btn btn-block btn-outline-secondary">
  Go back
</a>

&nbsp;|&nbsp;

<a href ='/delete_director/<%= @director.id %>' class='btn btn-block btn-outline-secondary'>
  Delete director
</a>

<hr> 
<dl>
  <dt> Name </dt>
  <dd> <%= @director.name %> </dd>

  <dt> Dob </dt>
  <dd> <%= @director.dob %> </dd>

  <dt> Bio </dt>
  <dd>
    <%= @director.bio %>
  </dd>

  <dt> Image </dt>
  <dd>
    <%= @director.image %>
  </dd>

  <dt> Created at </dt>
  <dd> <%= time_ago_in_words(@director.created_at) %> ago </dd>

  <dt> Updated at </dt>
  <dd> <%= time_ago_in_words(@director.updated_at) %> ago </dd>
</dl>

<hr> 
<h2> Filmography </h2>
<table border="1">
<% @filmography.each do |a_movie| %>
  <tbody>
  <tr>
    <th> ID </th>
    <th> Image </th>
    <th> Title </th>
    <th> Year </th>
    <th> Director </th>

    <th>
    </th>
  </tr>

  <tr>
    <td> <%= a_movie.id %> </td>

    <td>
      <img src='http://robohash.org/<%= a_movie.image %>' %>
    </td>

    <td> <%= a_movie.title %> </td>

    <td> <%= a_movie.year %> </td>

    <td> 
      <% d = Director.where({ :id => a_movie.director_id }).at(0) %>
      <%= d.name %> 
    </td>

    <td>
      <a href="/movies/<%= a_movie.id%>">
        Show details
      </a>
    </td>
  </tr>

<% end %>