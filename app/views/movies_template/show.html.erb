<h1> Movie #<%= @movie.id %> details </h1>


<a href="/movies" class="btn btn-block btn-outline-secondary">
  Go back
</a>

&nbsp;|&nbsp;

<a href ='/delete_movies/<%= @movie.id %>' class='btn btn-block btn-outline-secondary'>
  Delete movie
</a>

<% @list_of_movies.each do |a_movie| %>
<hr> 
<dl>
  <dt> Title </dt>
  <dd> <%= @movie.title %> </dd>

  <dt> Year </dt>
  <dd> <%= @movie.year %> </dd>

  <dt> Duration </dt>
  <dd>
    <%= @movie.duration %>
  </dd>

  <dt> Description </dt>
  <dd>
    <%= @movie.description %>
  </dd>

  <dt> Image </dt>
  <dd>
    <img src='http://robohash.org/<%= a_movie.image %> '>
  </dd>

  <dt> Director </dt>
  <dd>
    <% d = Director.where({ :id => a_movie.director_id }).at(0) %>
    <%= d.name %> 
  </dd>

  <dt> Created at </dt>
  <dd> <%= time_ago_in_words(@movie.created_at) %> ago </dd>

  <dt> Updated at </dt>
  <dd> <%= time_ago_in_words(@movie.updated_at) %> ago </dd>
</dl>

<% end %>